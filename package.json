{
  "name": "strandweaver-machine",
  "version": "0.1.0",
  "description": "interpreter for strandweaver structured text games",
  "author": "James Stuart",
  "main": "dist/index.js",
  "type": "commonjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --build tsconfig.build.json",
